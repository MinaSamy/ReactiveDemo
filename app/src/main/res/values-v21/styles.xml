<resources>

    <style name="AppTheme" parent="@style/AppBaseTheme">
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:activityOpenEnterAnimation">@anim/slide_from_right</item>
        <item name="android:windowEnterTransition">@transition/activity_enter</item>
        <item name="android:windowExitTransition">@transition/activity_exit</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="CardViewStyle" parent="@style/CardViewBaseStyle">
        <item name="android:transitionName">@string/transition_card_view</item>
    </style>

    <style name="DetailsTextStyle" parent="@android:style/TextAppearance.Large">
        <item name="android:transitionName">@string/transition_card_view</item>
    </style>

    <style name="CardViewDescriptionTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_margin">@dimen/text_item_margin</item>
        <item name="android:maxLines">6</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>
